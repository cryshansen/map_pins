{#
/**
 * @file
 * Theme override for a 'form' element.
 *
 * Available variables
 * - attributes: A list of HTML attributes for the wrapper element.
 * - children: The child elements of the form.
 *
 * @see template_preprocess_form()
 */
#}
{%
  set classes = [
    'form-control',
    'blog-published',
    'blog-unpublished',
  ]
%}
<!-- div and classes work but not the variable h4 <div{{ attributes.addClass(classes) }}>
{{ h4 }}
</div> -->
<div class="iIXMAL2"></div>
<div class="container-fluid">
    <div class="artog-map d-none d-sm-none d-md-flex">
      <img src="./themes/contrib/bootstrap5/images/Montreal.png">
    </div>
    <div class="artog-map-contact col-lg-6 col-md-10 mx-5">
      <div class="card card-contact card-raised artog-card-map m-0">
        {{ form.form_token }}
        {{ form.form_id }}
        <form role="form" id="contact-form-map" method="post">
          <div class="card-header text-center">
            <h4 class="card-title">
              <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 384 512"><style></style><path d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z"></path></svg>&nbsp;Hot Spots</h4></div>
              
              <div class="card-body"><div class="row"><div class="col-md-6"><div class="info info-horizontal"><div class="icon icon-primary">&nbsp;</div><div class="description"><h5 class="info-title">Connected to a group</h5><p>Museum of Fine Art<br>+1 514 285 2000<br>Mon - Fri, 8:00-22:00</p></div></div></div><div class="col-md-6"><div class="info info-horizontal"><div class="icon icon-primary">&nbsp;</div><div class="description"><h5 class="info-title">Meet Point</h5><p>1380 Sherbrooke St W,&nbsp;&nbsp;&nbsp;<br>Montreal, Quebec H3G 1J5&nbsp;&nbsp;&nbsp;<br>Canada</p></div></div></div></div>
              <div class="row">
                <div class="col-md-6 pr-2">
                   {{ form.full_name }}
                </div>
                <div class="col-md-6 pl-2">
                 
                    {{ form.email }}
                
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-check">
                    <label class="form-check-label">
                      <input class="form-check-input" type="checkbox"> I'm not a robot&nbsp;
                    </label>
                  </div>
                </div>
                <div class="col-md-6">
                    {{form.actions}}
                </div>
              </div>
          </div>
        </form>
      </div>
    </div>
    
  </div>
  <div class="capMAL"></div>    
</div>


